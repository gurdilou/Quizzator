{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        //to please IntelliJ
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/public/js/**/*"
    ]
}
