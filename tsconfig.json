{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "server/types/*",
                "client/js/types/*"
            ]
        },
        //to please IntelliJ
        "jsx": "react"
    },
    "include": [
        "server/**/*",
        "model/**/*"
    ]
}
