{
    "compilerOptions": {
        "module":"amd",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outFile": "dist/public/js/app.js",
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "*": [
                "node_modules/*",
                "client/js/types/*"
            ]
        }
    },
    "include": [
        "server/shared/**/*",
        "client/js/**/*"
    ]
}
